{% extends 'base.html.twig' %}

{% block title %}Actualite{% endblock %}

{% block body %}
    <h1>Actualite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ actualite.titre }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ actualite.texte }}</td>
            </tr>
            <tr>
                <th>Published</th>
                <td>{{ actualite.published ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Publish_date</th>
                <td>{{ actualite.publishDate ? actualite.publishDate|date('d-m-Y H:i') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark m-2" href="{{ path('app_actualite_index') }}">back to list</a>

    <a class="btn btn-outline-dark m-2" href="{{ path('app_actualite_edit', {'id': actualite.id}) }}">edit</a>

    {{ include('actualite/_delete_form.html.twig') }}
{% endblock %}
