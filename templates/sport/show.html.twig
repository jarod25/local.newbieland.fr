{% extends 'base.html.twig' %}

{% block title %}Sport{% endblock %}

{% block body %}
    <h1>Sport</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sport.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ sport.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ sport.description }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td><img src="{{ vich_uploader_asset(sport, 'imageFile') }}" alt="photo" width="200px"></td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-dark m-2" href="{{ path('app_sport_index') }}">back to list</a>

    <a class="btn btn-outline-dark m-2" href="{{ path('app_sport_edit', {'id': sport.id}) }}">edit</a>

    {{ include('sport/_delete_form.html.twig') }}
{% endblock %}
