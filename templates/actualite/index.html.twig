{% extends 'base.html.twig' %}

{% block title %}Actualite index{% endblock %}

{% block body %}
    <h1>Actualite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Texte</th>
                <th>Published</th>
                <th>Publish_date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for actualite in pagination %}
            <tr>
                <td>{{ actualite.id }}</td>
                <td>{{ actualite.titre }}</td>
                <td>{{ actualite.texte }}</td>
                <td>{{ actualite.published ? 'Yes' : 'No' }}</td>
                <td>{{ actualite.publishDate ? actualite.publishDate|date('d-m-Y H:i') : '' }}</td>
                <td>
                    <a class="btn btn-outline-dark m-2" href="{{ path('app_actualite_show', {'id': actualite.id}) }}">show</a>
                    <a class="btn btn-outline-dark m-2" href="{{ path('app_actualite_edit', {'id': actualite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-dark m-2" href="{{ path('app_actualite_new') }}">Create new</a>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
