{% extends 'base.html.twig' %}

{% block title %}Sport index{% endblock %}

{% block body %}
    <h1>Sport index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Description</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sport in pagination %}
            <tr>
                <td>{{ sport.id }}</td>
                <td>{{ sport.nom }}</td>
                <td>{{ sport.description }}</td>
                <td>
                    <a class="btn btn-outline-dark m-2" href="{{ path('app_sport_show', {'id': sport.id}) }}">show</a>
                    <a class="btn btn-outline-dark m-2" href="{{ path('app_sport_edit', {'id': sport.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-dark m-2"s href="{{ path('app_sport_new') }}">Create new</a>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
