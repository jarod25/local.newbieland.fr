{% extends 'base.html.twig' %}

{% block title %}Ville index{% endblock %}

{% block body %}
    <h1>Ville index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for ville in pagination %}
            <tr>
                <td>{{ ville.id }}</td>
                <td>{{ ville.libelle }}</td>
                <td>
                    <a class="btn btn-outline-dark m-2" href="{{ path('app_ville_show', {'id': ville.id}) }}">show</a>
                    <a class="btn btn-outline-dark m-2" href="{{ path('app_ville_edit', {'id': ville.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-outline-dark m-2" href="{{ path('app_ville_new') }}">Create new</a>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
