{% extends 'base.html.twig' %}

{% block title %}Evenement index{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button class="btn btn-outline-dark m-2" type="submit">Filtrer</button> <a class="btn btn-outline-dark m-2" href="{{ path('app_liste_evenements') }}">Reset</a>
    {{ form_end(form) }}

    <table class="table">
        <thead>
        <tr>
            <th>Nom</th>
            <th>Debut</th>
            <th>Fin</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for evenement in pagination %}
            <tr>
                <td>{{ evenement.nom }}</td>
                <td>{{ evenement.debut ? evenement.debut|date('d-m-Y H:i') : '' }}</td>
                <td>{{ evenement.fin ? evenement.fin|date('d-m-Y H:i') : '' }}</td>
                <td>
                    <a class="btn btn-outline-dark m-2" href="{{ path('app_liste_evenements_show', {'id': evenement.id}) }}">show</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
